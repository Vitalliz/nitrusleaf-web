<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar-user.ejs') %>



<main class="main-content">
    <%- include ('partials/navbar-lateral.ejs') %>
    <div class="container mt-5">
        <div class="d-flex align-items-center justify-content-between mt-2" >
            <h1 class="align-self-end m-0 p-0 fonte" id="titulo">Resultado</h1>
        </div>
        <img src="/imgs/linha.png" alt="" id="voltar-linha" class="p-0 mt-0" />
    </div>

    <div class="container pt-3">
        <div class="card p-5" id="tab">
            <div class="row">
                <div class="col-8">
                    <div class="mt-4 ms-4" >
                        <h2 class="" id="titulo">Probabilidade de ser</h2>
                        <h1 id="titulo">Deficiência de Cobre</h1>
                    </div>
                    <div >
                        <div class="card-body">
                            <img src="/imgs/linha.png" alt=""  id="voltar-linha"  class="p-0 mt-0" />
                            <div>
                                <div class="mb-3">
                                    <strong>Talhão:</strong>
                                    <span><%= talhao ? talhao.nome : '—' %></span>
                                </div>
                                <div class="mb-3">
                                    <strong>Pé:</strong>
                                    <span><%= pe ? pe.nome : '—' %></span>
                                </div>

                                <div class="mb-3">
                                    <strong>Resumo de ocorrências:</strong>
                                    <div>Cobre: <%= counts.cobre %> | Manganês: <%= counts.manganes %> | Outros: <%= counts.outros %></div>
                                </div>

                                <h4 class="mt-4">Relatórios</h4>
                                <% if (relatorios && relatorios.length > 0) { %>
                                    <ul>
                                        <% relatorios.forEach(r => { %>
                                            <li style="margin-bottom:8px;">
                                                <strong><%= new Intl.DateTimeFormat('pt-BR').format(new Date(r.data_analise)) %>:</strong>
                                                <% if (r.deficiencia_cobre) { %>
                                                    <span>Deficiência de Cobre</span>
                                                <% } %>
                                                <% if (r.deficiencia_manganes) { %>
                                                    <span> Deficiência de Manganês</span>
                                                <% } %>
                                                <% if (r.outros) { %>
                                                    <span> Outros</span>
                                                <% } %>
                                                <% if (r.observacoes) { %>
                                                    <div><em><%= r.observacoes %></em></div>
                                                <% } %>
                                            </li>
                                        <% }) %>
                                    </ul>
                                <% } else { %>
                                    <p>Nenhum relatório encontrado para este pé.</p>
                                <% } %>

                                <h4 class="mt-4">Fotos</h4>
                                <% if (fotos && fotos.length > 0) { %>
                                    <div class="d-flex flex-wrap" style="gap:12px;">
                                        <% fotos.forEach(f => { %>
                                            <div style="width:120px;">
                                                <img src="<%= f.url %>" alt="foto" style="width:100%; border-radius:8px;" />
                                                <% if (f.resultado_analise) { %>
                                                    <div style="font-size:12px; color:#444;"><%= f.resultado_analise %></div>
                                                <% } %>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <p>Nenhuma foto enviada para este pé.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="col " id="diag-img" src="/imgs/deficiencia-diag.svg" alt="">
                    

            </div>
        </div>
        
    </div>


</main>

 
<%- include ('partials/footer.ejs') %>
