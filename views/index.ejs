<%- include ('partials/header.ejs') %>

<main style="background-color: #FAF1E5; min-height: 100vh; position: relative;">
  <!-- Logo no canto superior esquerdo -->
  <div style="position: absolute; top: 20px; left: 20px; z-index: 10;">
    <img src="/imgs/logo-nitrusleaf.png" alt="NitrusLeaf" style="height: 60px;">
  </div>

  <!-- Conteúdo principal centralizado -->
  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 60px; position: relative; z-index: 10;">
    <div class="text-center" style="max-width: 400px; width: 100%;">
      <!-- Título principal -->
      <h1 style="color: #333333; font-weight: bold; font-size: 2.5rem; margin-bottom: 10px; text-align: left;">Bem vindo!</h1>
      <p style="color: #555555; font-size: 1.1rem; margin-bottom: 20px; text-align: left;">Entre na sua conta</p>
      
      <!-- Mensagens Flash -->
      <% if (typeof messages !== 'undefined' && messages) { %>
        <% if (messages.success && messages.success.length > 0) { %>
          <div style="background: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 12px; border-radius: 8px; margin-bottom: 20px; font-size: 0.9rem;">
            <%= messages.success[0] %>
          </div>
        <% } %>
        <% if (messages.danger && messages.danger.length > 0) { %>
          <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 12px; border-radius: 8px; margin-bottom: 20px; font-size: 0.9rem;">
            <%= messages.danger[0] %>
          </div>
        <% } %>
        <% if (messages.error && messages.error.length > 0) { %>
          <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 12px; border-radius: 8px; margin-bottom: 20px; font-size: 0.9rem;">
            <%= messages.error[0] %>
          </div>
        <% } %>
      <% } %>
      
      <!-- Formulário de login -->
      <form action="/authenticate" method="post" style="text-align: left;">
        <div class="mb-3">
          <label for="email" style="color: #333333; font-weight: bold; display: block; margin-bottom: 8px;">E-mail ou número:</label>
          <input type="email" id="email" name="email" placeholder="email@exemplo.com" required
                 style="width: 100%; padding: 12px 16px; border: 2px solid #8BC34A; border-radius: 8px; background-color: white; font-size: 1rem; height: 48px;">
        </div>
        
        <div class="mb-3">
          <label for="senha" style="color: #333333; font-weight: bold; display: block; margin-bottom: 8px;">Senha:</label>
          <input type="password" id="senha" name="senha" placeholder="Insira sua senha" required
                 style="width: 100%; padding: 12px 16px; border: 2px solid #8BC34A; border-radius: 8px; background-color: white; font-size: 1rem; height: 48px;">
        </div>
        
        <!-- Botão Entrar -->
        <button type="submit" style="width: 100%; padding: 12px 16px; background-color: #8BC34A; color: white; border: none; border-radius: 8px; font-size: 1rem; font-weight: bold; height: 48px; margin-bottom: 15px;">
          Entrar
        </button>
        
        <!-- Botão Google -->
        <button type="button" style="width: 100%; padding: 12px 16px; background-color: white; color: #333333; border: 2px solid #333333; border-radius: 8px; font-size: 1rem; display: flex; align-items: center; justify-content: center; gap: 8px; height: 48px;">
          <img src="/imgs/google-g.png" alt="Google" style="width: 18px; height: 18px;">
          Entrar com o Google
        </button>
        
        <!-- Links -->
        <div style="margin-top: 15px; text-align: center;">
          <a href="/esqueciAsenha" style="color: #2196F3; text-decoration: underline; font-size: 0.9rem;">Esqueci a senha</a>
          <br>
          <span style="color: #555555; font-size: 0.9rem;">Não possui uma conta? </span>
          <a href="/selecionar-cadastro" style="color: #2196F3; text-decoration: underline; font-size: 0.9rem;">Fazer cadastro</a>
        </div>
      </form>
    </div>
  </div>

      <!-- Vector-BG.png como fundo da onda - baixado -->
      <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 40%; background-image: url('/imgs/Vector-BG.png'); background-size: cover; background-position: top; background-repeat: no-repeat; z-index: 2;"></div>
      
      <!-- Mexerica atrás da onda - muito maior -->
      <div style="position: absolute; bottom: 2%; left: 10%; z-index: 1;">
        <img src="/imgs/bg-use.png" alt="Mexerica" style="height: 400px; opacity: 0.9;">
      </div>

  <!-- Copyright -->
  <div style="position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%); color: #333333; font-size: 0.8rem; z-index: 3;">
    ©2025 NitrusLeaf
  </div>
</main>
