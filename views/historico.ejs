<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar-user.ejs') %>

<main class="main-content home-dashboard">
    <%- include ('partials/navbar-lateral.ejs') %>
    <section class="dashboard-container">
        <header class="dashboard-header">
            <h1>Histórico</h1>
            <div class="property-select">
                <label for="propriedades">Propriedade</label>
                <div class="select-wrapper">
                    <% if (propriedades && propriedades.length > 0) { %>
                        <select id="propriedades" class="property-dropdown">
                            <% propriedades.forEach(prop => { %>
                                <option value="<%= prop.id_propriedade %>" <%= propriedadeSelecionada == prop.id_propriedade ? 'selected' : '' %>><%= prop.nome %></option>
                            <% }) %>
                        </select>
                    <% } else { %>
                        <select id="propriedades" class="property-dropdown" disabled>
                            <option>Nenhuma propriedade cadastrada</option>
                        </select>
                    <% } %>
                </div>
            </div>
        </header>

        <section class="analysis-section">
            <h2>Resumo da Propriedade</h2>
            <div class="analysis-card resumo-card">
                <div class="card-body resumo-card-body">
                    <div class="resumo-row">
                        <div class="resumo-item">
                            <div class="resumo-label">Talhões registrados</div>
                            <div class="resumo-value"><%= resumo.talhoes_registrados %></div>
                        </div>
                        <div class="resumo-item">
                            <div class="resumo-label">Total de pés</div>
                            <div class="resumo-value"><%= resumo.total_pes %></div>
                        </div>
                    </div>
                    <div class="resumo-row">
                        <div class="resumo-item">
                            <div class="resumo-label">Pés Diagnosticados</div>
                            <div class="resumo-value"><%= resumo.pes_diagnosticados %></div>
                        </div>
                        <div class="resumo-item">
                            <div class="resumo-label">Pés analisados</div>
                            <div class="resumo-value"><%= resumo.pes_analisados %></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="analysis-section">
            <article class="analysis-card analysis-card-custom">
                <header class="card-header card-header-custom">
                    <div class="card-header-custom-top">
                        <h3>Alqueires</h3>
                        <a href="/alqueires/cadastrar<%= propriedadeSelecionada ? '?propriedade=' + propriedadeSelecionada : '' %>" class="btn-primary-custom">
                            <span>+</span> Cadastrar Alqueire
                        </a>
                    </div>
                    <div class="card-header-divider"></div>
                </header>
                <div class="card-body card-body-custom">
                    <table class="table-custom">
                        <thead>
                            <tr>
                                <th>Nome Alqueire</th>
                                <th class="text-center">Talhões</th>
                                <th class="text-center">Data de Criação</th>
                                <th style="width: 60px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (alqueires && alqueires.length > 0) { %>
                                <% alqueires.forEach(alqueire => { %>
                                    <tr>
                                        <td><%= alqueire.nome %></td>
                                        <td class="text-center"><%= alqueire.total_talhoes || 0 %></td>
                                        <td class="text-center"><%= alqueire.createdAt ? new Date(alqueire.createdAt).toLocaleDateString('pt-BR') : '-' %></td>
                                        <td class="text-right">
                                            <a href="/talhoes?alqueire=<%= alqueire.id_alqueire %>" class="btn-icon">
                                                <img src="/imgs/setinha.svg" alt="Ir">
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="empty-state-custom">
                                        <p>Nenhum alqueire cadastrado nesta propriedade</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </article>
        </section>
    </section>
</main>

<script src="/js/historico.js"></script>
<%- include ('partials/footer.ejs') %>
