<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<main class="main-content">
    <%- include ('partials/navbar-lateral.ejs') %>
    <form action="/pes/new" method="POST">
<div class="container mt-5">
    <h1 id="titulo">Cadastrar Talhão</h1>
    <div class="card mt-2" id="form-bg">
        <div class="card-body p-5">        
                <!-- Campos adicionais (class="d-none")-->
                <div id="camposAdicionais" class="mt-5">
                    <h4 id="titulo">Dados do Talhão</h4>
                    <!-- Endereço -->  
                    <div class="row">
                        <label for="">
                        <div>
                            <div class="d-flex align-items-center justify-content-between mt-2" id="hist">
                                <div class="options-container col-md-5">
                                  <select id="prop" class="form-control" name="id_talhao">
                                    <% talhoes.forEach(tal => {%>
                                    <option value="<%= tal.id_talhao%>" class="form-control"><%= tal.nome%></option>
                                  <%})%>
                                  </select required>
                                  <img src="/imgs/arrow-down.svg" alt="Seta" class="menu-arrowp" id="setajs"/>
                                </div>
                            </div>
                        </label>
                        <div class="form-group col-md-5 mt-4">
                            <label for="cep" class="form-label">Nome pé</label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Insira o nome do pé" required>
                        </div>
                    </div>
                        <div class="form-group col-md-5 mt-4">
                            <label for="cep" class="form-label">Observações</label>
                            <textarea rows="4" cols="50" class="form-control" id="observacoes" name="observacoes" placeholder="Insira as observações sobre o pé"></textarea>
                        </div>

                <!-- Botão para cadastrar -->
                 <div class="container  my-2">
                    <button type="submit" class="btn pt-2 mt-3" style="padding-inline: 7rem;" id="btn-entrar">Cadastrar</button>
                </div>
            </div>
            </form>

            <!-- TABELA DE DADOS DAS PROPRIEDADES CADASTRADAS -->
            <div class="card my-4" id="form-bg-claro">
                <div class="card-body">
                    <table class="tabe">
                        <thead id="thead">
                            <th class="fonte" id="thead">Nome Pé</th>
                            <th class="fonte" id="thead">Talhão</th>
                            <th class="fonte" id="thead">Observações</th>
                            <th class="fonte" id="thead">Editar</th>
                        </thead>
                        <tbody>
                            <% pes.forEach(pe => { %>
                            <tr class="tb">
                            <td class="fonte" id="tabodyp"><%= pe.nome %></td>
                            <td class="fonte" id="tabodyp"><%= pe.talhoes.nome %></td>
                            <td class="fonte" id="tabodyp"><textarea readonly><%= pe.observacoes%></textarea></td>
                            <td class="fonte" id="tabodyp">
                                <a href="/pes/edit/<%= pe.id_pe %>"><img src="/imgs/btn-editar.svg" alt=""></a>
                            </td>
                            </tr>
                            <% }) %>
                        </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>
</main>
<%- include('partials/footer.ejs') %>
