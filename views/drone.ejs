<%- include('partials/header.ejs') %>
<%- include('partials/navbar-user.ejs') %>
<%- include('partials/navbar-lateral.ejs') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="background-color: var(--cor-fundo-form); border: 2px solid var(--verde-escuro);">
                <div class="card-header text-center" style="background: var(--background-gradient); color: var(--texto-marrom); border-bottom: 2px solid var(--verde-escuro);">
                    <h2 style="color: var(--texto-marrom); font-weight: bold;"><i class="fas fa-drone"></i> Funcionalidade Drone</h2>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-tools fa-5x mb-3" style="color: var(--cor-fundo-cor);"></i>
                    </div>
                    <h3 style="color: var(--verde-escuro); font-weight: bold;" class="mb-3">Em Desenvolvimento</h3>
                    <p class="lead mb-4" style="color: var(--texto-marrom); font-weight: 500;">
                        Esta funcionalidade está sendo desenvolvida e estará disponível em breve.
                    </p>
                    <div class="alert" style="background-color: var(--input-color); border: 2px solid var(--border-input-color); color: var(--texto-marrom);">
                        <h5 style="color: var(--verde-escuro);"><i class="fas fa-info-circle"></i> O que você pode esperar:</h5>
                        <ul class="list-unstyled text-left">
                            <li style="color: var(--texto-marrom); margin-bottom: 8px;"><i class="fas fa-check" style="color: var(--verde-bege);"></i> Análise automatizada de imagens de drone</li>
                            <li style="color: var(--texto-marrom); margin-bottom: 8px;"><i class="fas fa-check" style="color: var(--verde-bege);"></i> Mapeamento de áreas de plantio</li>
                            <li style="color: var(--texto-marrom); margin-bottom: 8px;"><i class="fas fa-check" style="color: var(--verde-bege);"></i> Detecção de deficiências nutricionais</li>
                            <li style="color: var(--texto-marrom); margin-bottom: 8px;"><i class="fas fa-check" style="color: var(--verde-bege);"></i> Relatórios detalhados de saúde das plantas</li>
                        </ul>
                    </div>
                    <div class="mt-4">
                        <a href="/home" class="btn btn-lg" style="background: var(--background-gradient); color: var(--texto-marrom); border: 2px solid var(--verde-escuro); font-weight: bold;">
                            <i class="fas fa-home"></i> Voltar ao Início
                        </a>
                    </div>
                </div>
                <div class="card-footer text-center" style="background-color: var(--cor-fundo-bege); border-top: 2px solid var(--verde-escuro);">
                    <small style="color: var(--texto-marrom); font-weight: 500;">NitrusLeaf - Tecnologia para o futuro da agricultura</small>
                </div>
            </div>
        </div>
    </div>
</div>

