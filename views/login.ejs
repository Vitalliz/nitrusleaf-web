<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<main>
    <% if (messages.danger) { %>
        <div class="alert alert-danger">
            <%= messages.danger %>
        </div>
    <% } %>

    <% if (messages.success) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>

    <div class="container col-4 mt-4 transparent-container">    
        <div class="card-body mt-5 mx-5 transparent-container">
            <h1 id="titulo">Entrar</h1>
            <p style="color: red; font-size: 0.7em;">Você precisa estar logado para acessar os recursos do painel.</p>
            <form action="/authenticate" method="post">
                <label>E-mail:</label>
                <input class="form-control" type="email" name="email" placeholder="email@exemplo.com" required>
                <br>
                <label>Senha:</label>
                <input class="form-control" type="password" name="senha" placeholder="Insira sua senha" required>
                <br>
                <div class="text-center">
                    <input type="submit" value="Entrar" id="btn-entrar" class="pt-2 pb-2" style="padding-inline: 8rem;">
                    <div class="mt-3">
                        <h6><a href="/esqueciAsenha" id="link">Esqueci a senha</a></h6>
                        <h6>Não possui conta?<a href="/cadastroUsuarios" id="link">Fazer Cadastro</a></h6>
                    </div>                   
                </div>      
            </form>
            <hr> 
        </div>

    </div>
</main>

<%- include('partials/footer.ejs') %>
