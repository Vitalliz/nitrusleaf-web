<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar-user.ejs') %>
<link rel="stylesheet" href="/css/analises.css">
<main class="main-content home-dashboard">
    <%- include('../partials/navbar-lateral.ejs') %>
    <section class="dashboard-container">
        <header class="dashboard-header">
            <div class="analises-header">
                <a href="/home" class="analises-back-button">
                    <img src="/imgs/back.svg" alt="Voltar">
                    Voltar
                </a>
                <h1 class="analises-title">Ocorrências Totais de Deficiências</h1>
            </div>
            <div class="property-select">
                <label for="propriedades">Propriedade</label>
                <div class="select-wrapper">
                    <% if (propriedades && propriedades.length > 0) { %>
                        <select id="propriedades" class="property-dropdown">
                            <% propriedades.forEach(prop => { %>
                                <option value="<%= prop.id_propriedade %>" <%= propriedadeSelecionada == prop.id_propriedade ? 'selected' : '' %>><%= prop.nome %></option>
                            <% }) %>
                        </select>
                    <% } else { %>
                        <select id="propriedades" class="property-dropdown" disabled>
                            <option>Nenhuma propriedade cadastrada</option>
                        </select>
                    <% } %>
                </div>
            </div>
        </header>

        <section class="analysis-section">
            <div class="analysis-card" style="margin-bottom: 24px;">
                <div class="card-body" style="padding-top: 20px;">
                    <div class="analises-filter-container">
                        <div class="analises-filter-wrapper">
                            <label for="alqueire-filtro" class="analises-filter-label">Filtrar por Alqueire</label>
                            <select id="alqueire-filtro" class="analises-filter-select">
                                <option value="">Todos os alqueires</option>
                                <% if (alqueires && alqueires.length > 0) { %>
                                    <% alqueires.forEach(alq => { %>
                                        <option value="<%= alq.id_alqueire %>" <%= alqueireFiltro == alq.id_alqueire ? 'selected' : '' %>><%= alq.nome %></option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>
                        <button onclick="aplicarFiltro()" class="analises-filter-button">
                            Filtrar
                        </button>
                    </div>

                    <div class="analises-chart-grid">
                        <div class="analises-chart-container">
                            <h3 class="analises-chart-title">Gráfico de Ocorrências</h3>
                            <canvas id="chart-ocorrencias" class="analises-chart-canvas"></canvas>
                        </div>
                        <div>
                            <h3 class="analises-chart-title">Resumo</h3>
                            <div class="analises-resumo-panel">
                                <div class="analises-resumo-item">
                                    <div class="analises-resumo-header">
                                        <span class="analises-resumo-badge" style="background-color: #D84A0F;"></span>
                                        <strong class="analises-resumo-label">Cobre: <%= resumoDeficiencias.percentuais.cobre %>%</strong>
                                    </div>
                                    <p class="analises-resumo-text"><%= resumoDeficiencias.totais.cobre %> ocorrência(s)</p>
                                </div>
                                <div class="analises-resumo-item">
                                    <div class="analises-resumo-header">
                                        <span class="analises-resumo-badge" style="background-color: #FFB534;"></span>
                                        <strong class="analises-resumo-label">Manganês: <%= resumoDeficiencias.percentuais.manganes %>%</strong>
                                    </div>
                                    <p class="analises-resumo-text"><%= resumoDeficiencias.totais.manganes %> ocorrência(s)</p>
                                </div>
                                <div class="analises-resumo-item">
                                    <div class="analises-resumo-header">
                                        <span class="analises-resumo-badge" style="background-color: #ACACAC;"></span>
                                        <strong class="analises-resumo-label">Adversos: <%= resumoDeficiencias.percentuais.outros %>%</strong>
                                    </div>
                                    <p class="analises-resumo-text"><%= resumoDeficiencias.totais.outros %> ocorrência(s)</p>
                                </div>
                                <div class="analises-resumo-divider">
                                    <p class="analises-resumo-total">Total: <%= resumoDeficiencias.total %> ocorrência(s)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h3 class="analises-section-title">Talhões e Ocorrências</h3>
                        <div class="table-custom-wrapper">
                            <table class="table-custom">
                                <thead>
                                    <tr>
                                        <th>Talhão</th>
                                        <th class="text-center">Total de Pés</th>
                                        <th class="text-center">Ocorrências</th>
                                        <th class="text-center">Última Análise</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (talhoesComDados && talhoesComDados.length > 0) { %>
                                        <% talhoesComDados.forEach(talhao => { %>
                                        <tr>
                                            <td><strong><%= talhao.nome %></strong></td>
                                            <td class="text-center"><%= talhao.total_pes %></td>
                                            <td class="text-center">
                                                <div class="analises-badges-container">
                                                    <% if (talhao.ocorrencias.cobre > 0) { %>
                                                        <span class="analises-badge analises-badge-cobre">
                                                            Cobre: <%= talhao.ocorrencias.cobre %>
                                                        </span>
                                                    <% } %>
                                                    <% if (talhao.ocorrencias.manganes > 0) { %>
                                                        <span class="analises-badge analises-badge-manganes">
                                                            Manganês: <%= talhao.ocorrencias.manganes %>
                                                        </span>
                                                    <% } %>
                                                    <% if (talhao.ocorrencias.outros > 0) { %>
                                                        <span class="analises-badge analises-badge-outros">
                                                            Outros: <%= talhao.ocorrencias.outros %>
                                                        </span>
                                                    <% } %>
                                                    <% if (talhao.ocorrencias.total === 0) { %>
                                                        <span class="analises-badge analises-badge-none">Nenhuma</span>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <%= talhao.ultima_analise ? new Date(talhao.ultima_analise).toLocaleDateString('pt-BR') : 'N/A' %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="empty-state-custom">
                                                <p>Nenhum talhão encontrado</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    window.resumoDeficiencias = <%- JSON.stringify(resumoDeficiencias) %>;
    window.propriedadeSelecionada = '<%= propriedadeSelecionada || "" %>';
    window.aplicarFiltro = function() { aplicarFiltro('alqueire'); };
</script>
<script src="/js/analises.js"></script>

<%- include('../partials/footer.ejs') %>
